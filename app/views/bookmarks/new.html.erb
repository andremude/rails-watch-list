<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1 class="title"><strong>New Bookmark</strong></h1>
  </div>
</div>
<br>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for([@list, @bookmark]) do |r| %>
        <div class="form-inputs">
          <%= r.association :movie %>
          <%= r.input :comment %>
        </div>

        <div class="form-actions">
          <%= r.button :submit, class: "btn btn-primary mb-5" %>
          <%= link_to 'Back', lists_path(@list), class: "btn btn-secondary mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
