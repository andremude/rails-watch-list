<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1 class="title"><strong><%= @list.name %></strong></h1>
  </div>
</div>

<br>

<div>
  <div class="container">
    <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-primary mb-4" %>
    <%= link_to 'Home Page', lists_path, class: "btn btn-secondary mb-4" %>

    <div class="bookmark-cards">
      <% @list.bookmarks.each do |bookmark| %>

        <div class="card-trip position-relative">
          <img src="<%= bookmark.movie.poster_url %>"/>
        </div>

        <div class="card-trip-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
        </div>

        </div>
          <h2><%= bookmark.movie.rating %></h2>
        </div>

        <div class= "comments">
          <p><%= bookmark.comment %></p>
        </div>

        <%= link_to 'Delete',
                    bookmark_path(bookmark),
                    method: :delete,
                    class: 'btn btn-dark position-absolute eraser',
                    data: { confirm: 'Are you sure you want to delete this movie?'}
        %>
      <% end %>
    </div>
  </div>
</div>
